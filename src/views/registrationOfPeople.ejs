<!-- por imagem no input -->
<script>
    // Selecione o input de arquivo
    const inputFile = document.getElementById('photo');

    // Adicione um ouvinte de evento de mudança ao input de arquivo
    inputFile.addEventListener('change', function(event) {
        // Verifique se há um arquivo selecionado
        if (this.files && this.files[0]) {
            // Crie um objeto URL para a imagem selecionada
            const imageUrl = URL.createObjectURL(this.files[0]);
            
            // Selecione a div do contêiner de imagem
            const imageContainer = document.getElementById('imageContainer');
            
            // Defina o background da div com a imagem selecionada
            imageContainer.style.backgroundImage = `url(${imageUrl})`;
        }
    });
</script>

<!-- enviar formulario -->
<script>
document.getElementById('formCreate').addEventListener('submit', function(event) {
    event.preventDefault(); // Evita o envio padrão do formulário

    var formData = new FormData(this); // Cria um objeto FormData para armazenar os dados do formulário

    // Extrai a imagem selecionada
    var imageFile = document.getElementById('photo').files[0];

    // Cria um novo FormData
    var formData = new FormData();

    // Adiciona a imagem ao FormData com o nome correto do campo ('image')
    formData.append('image', imageFile);

    // Adiciona os outros campos do formulário ao FormData (certifique-se de adicionar todos os campos necessários)
    formData.append('name', document.getElementById('name').value);
    formData.append('rg', document.getElementById('rg').value);
    formData.append('cpf', document.getElementById('cpf').value);
    formData.append('tel', document.getElementById('tel').value);
    formData.append('dateOfBirth', document.getElementById('dateOfBirth').value);
    formData.append('cep', document.getElementById('cep').value);
    formData.append('publicPlace', document.getElementById('publicPlace').value);
    formData.append('neighborhood', document.getElementById('neighborhood').value);
    formData.append('houseNumber', document.getElementById('houseNumber').value);
    formData.append('city', document.getElementById('city').value);
    formData.append('uf', document.getElementById('uf').value);
    formData.append('email', document.getElementById('email').value);
    formData.append('whatsapp', document.getElementById('whatsapp').checked);

 


    // Envio da requisição POST para o endpoint /user/create
    fetch('/user/create', {
        method: 'POST',
        body: formData // Envia FormData, não JSON
    })
    .then(response => {
        if (!response.ok) {
            throw new Error('Erro ao enviar formulário');
        }
        return response.json();
    })
    .then(data => {
        console.log(data);
        window.location.href = '/lista-de-pessoas'
        // Aqui você pode lidar com a resposta do servidor, se necessário
    })
    .catch(error => {
        console.error('Erro:', error);
        // Aqui você pode lidar com erros de requisição ou do servidor
    });
});

</script>

<!-- consultar cep -->
<script>
    document.getElementById('cep').addEventListener('blur', () => {
    var cep = document.getElementById('cep').value;
    var url = `https://viacep.com.br/ws/${cep}/json/`;
    
    fetch(url)
    .then(response => response.json())
    .then(data => {
        if (data.erro) {
            console.log('CEP não encontrado')
        } else {
            data.logradouro ? document.getElementById('publicPlace').value = data.logradouro : ''
            data.bairro ? document.getElementById('neighborhood').value = data.bairro : ''
            data.localidade ? document.getElementById('city').value = data.localidade : ''
            data.uf ? document.getElementById('uf').value = data.uf : ''

            

            console.log(data)
           
        }
    })
    .catch(error => console.error('Erro ao consultar CEP:', error));
})

   
